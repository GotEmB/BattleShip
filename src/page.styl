user-select()
	-webkit-user-select arguments

transition-transform()
	-webkit-transition -webkit-transform arguments

transition()
	-webkit-transition arguments

transform()
	-webkit-transform arguments

transform-origin()
	-webkit-transform-origin arguments

box-shadow()
	-webkit-box-shadow arguments

html, body
	padding 0
	margin 0
	position relative
	width 320px
	height 416px
	user-select none
	font 12px/1.5 "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif
	background-color black
	overflow hidden

.selectable
	user-select text

#canvas
	display none
	position absolute

#menuViewContainer
	position absolute
	width 100%
	height 100%
	
	&.enableTransitions
		transition-transform 0.35s ease-in-out 0.2s
	
	&.moveDown
		transform translateY(100%)

#menuView
	display none
	position absolute
	width 320px
	height 413px
	background-color black
	transform-origin 0px 0px
	color white

div.menu
	position absolute
	width 100%
	height 100%
	background-color black
	
	#menuView.enableTransitions &
		transition-transform 0.35s ease-in-out 0.2s

	&.moveLeft
		transform translateX(-100%)
	
	&.moveRight
		transform translateX(100%)

#mainMenu
	padding-top 40%

#newMenu
	padding-top 30%

#joinMenu
	padding-top 15%

div.btn
	margin 20px 40px
	padding 6px
	text-align center
	font-size 150%
	color black
	background-color white
	border 2px solid white
	cursor default
	
	&:active
		color white
		background-color black

div.gameId_label
	font-size 150%
	text-align center

#gameId, #gameId_entry
	font-size 500%
	text-align center

#gameId_entry
	background-color white
	font-size 400%
	margin 10px 40px
	height 48px
	padding 5px
	line-height 1
	color black
	box-shadow inset 0 0 4px black

div.gameId_desc
	margin-top 100px
	padding 20px

#pleaseWait
	display none
	position absolute
	width 100%
	height 100%
	
	& div.container
		position absolute
		box-shadow none

#setupShipsOverlay
	display none
	position absolute
	pointer-events none
	width 320px
	height 416px
	transform-origin 0px 0px

#setupShips_desc
	padding 20px
	color white
	position absolute
	bottom 0